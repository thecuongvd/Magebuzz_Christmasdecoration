<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Magebuzz_Christmasdecoration::css/decoration.css"/>
    </head>
    <body>
        <referenceContainer name="before.body.end">
            <block class="Magebuzz\Christmasdecoration\Block\Decoration" name="christmas.header"
                   template="header.phtml" before="header-wrapper" 
                   ifconfig="christmasdecoration/general/enable" />
            <block class="Magebuzz\Christmasdecoration\Block\Decoration" name="christmas.footer"
                   template="footer.phtml" after="-" 
                   ifconfig="christmasdecoration/general/enable" />
            <block class="Magebuzz\Christmasdecoration\Block\Decoration" name="christmas.background"
                   template="background.phtml"
                   ifconfig="christmasdecoration/general/enable" />
            <block class="Magebuzz\Christmasdecoration\Block\Decoration" name="christmas.moving"
                   template="moving.phtml" after="-" 
                   ifconfig="christmasdecoration/general/enable" />
            <block class="Magebuzz\Christmasdecoration\Block\Decoration" name="christmas.snowfall"
                   template="snowfall.phtml" after="-" 
                   ifconfig="christmasdecoration/general/enable" />
        </referenceContainer>
    </body>
</page>